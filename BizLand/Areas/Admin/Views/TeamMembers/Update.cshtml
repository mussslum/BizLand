@model UpdateTeamMemberVM ;
<form class="card-body" enctype="multipart/form-data" method="post">

        <h4 class="card-title">Update Post</h4>
        
        <input asp-for="Id" type="hidden">

        <div class="form-group">
        <label asp-for="Name">Title</label>
        <input asp-for="Name" type="text" class="form-control form-control-lg" placeholder="Title" aria-label="Name">
        </div>

        <div class="form-group">
        <label asp-for="Position">Description</label>
        <input asp-for="Position" type="text" class="form-control" placeholder="Descripton" aria-label="Positon">
        </div>
        <div style="width:100px;height:100px">
            <img src="~/assets/img/team/@Model.imgUrl" class="img-fluid" alt="">
        </div>

        <div class="form-group">
        <label asp-for="Photo">Photo</label>
        <input asp-for="Photo" type="file" class="form-control " placeholder="Photo" aria-label="Photo">
        <span asp-validation-for="Photo"></span>
        </div>

        <div>
            <button type="submit" class="btn btn-success">Update</button>
        </div>
</form>